{
  "manifest_version": 2,
  "name": "SmartMark",
  "version": "1.0",
  "description": "An AI-powered smart research tool",
  "permissions": ["activeTab", "tabs", "tabGroups", "background", "<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "type": "module"
    }
  ],
  "background": {
    "page": "back.html"
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "SmartMark"
  }
}
